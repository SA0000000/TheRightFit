<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent" android:layout_height="fill_parent">
    
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddUserInfoActivity" >
    
 <TextView
        android:id="@+id/txt_pg_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:padding="15dip"
        android:text="@string/txt_pg_info" />
 
 
 <TextView
        android:id="@+id/txt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
	    android:layout_below="@id/txt1"
        android:layout_marginTop="10dp"
        android:padding="20dip"
        android:text="@string/txt2" />
 
 <EditText android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt2"
        android:padding="15dip"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="7dp"
	    android:layout_centerInParent="true"
	    android:layout_alignBottom="@+id/txt2"
	    
	    android:layout_toRightOf="@id/txt2" />
 
 <TextView
        android:id="@+id/txt3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
	    android:layout_below="@id/txt2"
        android:layout_marginTop="10dp"
        android:padding="20dip"
        android:text="@string/txt3" />
 
 <EditText android:id="@+id/edit_bust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt3"
        android:padding="15dip"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="7dp"
	    android:layout_alignBottom="@+id/txt3"
	    android:layout_alignLeft="@+id/edit_name"
	    android:layout_centerInParent="true"
	    android:layout_below="@id/edit_name"
	    android:layout_toRightOf="@id/txt3" />

<TextView
        android:id="@+id/txt4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
	    android:layout_below="@id/txt3"
        android:layout_marginTop="10dp"
        android:padding="20dip"
        android:text="@string/txt4" />
 
 <EditText android:id="@+id/edit_waist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/txt4"
        android:padding="15dip"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="7dp"
	    android:layout_alignBottom="@+id/txt4"
	    android:layout_alignLeft="@+id/edit_name"
	    android:layout_centerInParent="true"
	    android:layout_below="@id/edit_bust"
	    android:layout_toRightOf="@id/txt4" />

 
<TextView
        android:id="@+id/txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
	    android:layout_below="@id/txt4"
        android:layout_marginTop="10dp"
        android:padding="20dip"
        android:text="@string/txt5" />
 
 
 

</RelativeLayout>
</ScrollView>
